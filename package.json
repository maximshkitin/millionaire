{
  "private": true,
  "homepage": "https://maximshkitin.github.io/millionaire",
  "engines": {
    "node": "20.x",
    "npm": "10.x"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "build:gh": "cross-env GITHUB_PAGES=true next build",
    "start": "next start",
    "deploy": "npm run build:gh && touch ./out/.nojekyll && gh-pages -d out -t true",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky install"
  },
  "dependencies": {
    "@reduxjs/toolkit": "1.9.5",
    "next": "latest",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "8.1.0"
  },
  "devDependencies": {
    "@types/node": "20.3.1",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.5",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.0",
    "typescript": "5.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,css,scss,ts,tsx,md}": [
      "npm run lint:fix",
      "git add ."
    ]
  }
}
