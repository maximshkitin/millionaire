{
  "private": true,
  "homepage": "https://maximshkitin.github.io/millionaire",
  "engines": {
    "node": "18.x",
    "npm": "9.x"
  },
  "scripts": {
    "dev": "next",
    "test": "react-scripts test",
    "build": "next build",
    "build:gh": "cross-env GITHUB_PAGES=true next build",
    "start": "next start",
    "deploy": "npm run build:gh && touch ./out/.nojekyll && gh-pages -d out -t true",
    "lint": "eslint app/**/*.{ts,tsx}",
    "lint:fix": "eslint --fix app/**/*.{ts,tsx}",
    "lint:styles": "stylelint --fix  */styles/**/*.scss ",
    "format": "prettier --write .",
    "prepare": "husky install && chmod +x .husky/*",
    "prepush": "npm run lint"
  },
  "dependencies": {
    "@reduxjs/toolkit": "1.9.5",
    "next": "latest",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "8.1.0",
    "react-responsive": "^9.0.2",
    "react-spinners": "^0.13.8"
  },
  "devDependencies": {
    "@types/node": "20.3.1",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.5",
    "cross-env": "^7.0.3",
    "eslint": "^8.54.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-standard": "^5.0.0",
    "gh-pages": "^6.1.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.5",
    "stylelint": "^15.11.0",
    "stylelint-config-recommended": "^13.0.0",
    "stylelint-config-recommended-scss": "^13.1.0",
    "stylelint-scss": "^5.3.1",
    "typescript": "^5.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run prepush"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,md}": [
      "npm run lint:fix",
      "git add ."
    ]
  }
}
